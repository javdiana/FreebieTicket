<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnDefaultItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_custom"
    android:orientation="horizontal"
    android:layout_marginEnd="@dimen/item_spacing_2x"
    android:layout_marginStart="@dimen/item_spacing_1x">

    <ImageView
        android:id="@+id/btnImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/item_spacing_2x"
        android:layout_marginTop="@dimen/item_spacing_2x"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/item_spacing_2x"
        android:src="@drawable/ic_location" />

    <TextView
        android:id="@+id/btnName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_spacing_3x"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/work_sans_bold"
        android:textSize="@dimen/textSizeItemCustomButtonTitle"
        android:layout_marginEnd="@dimen/item_spacing_1x"
        android:layout_marginStart="@dimen/item_spacing_1x"
        tools:text="You area" />
</LinearLayout>