<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventItem"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:layout_marginEnd="@dimen/item_spacing_4x"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageEvent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/image_background"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/event_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDeleteItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/item_spacing_2x"
        android:layout_marginEnd="@dimen/item_spacing_2x"
        android:background="@drawable/button_background_grey"
        android:clickable="true"
        android:contentDescription="@string/content_description"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_spacing_4x"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvDateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_semi_bold"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            tools:text="25/12/19" />

        <TextView
            android:id="@+id/textviewFestival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_semi_bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_5_5x"
            tools:text="Festival:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_spacing_4x"
            android:alpha="0.7"
            android:gravity="bottom"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/item_spacing_4x"
                android:layout_height="@dimen/item_spacing_4x"
                android:layout_gravity="center_vertical|center_horizontal"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/item_spacing_1x"
                android:src="@drawable/ic_note" />

            <TextView
                android:id="@+id/tvTypeEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewTypeAndCost"
                tools:text="Type:" />

            <ImageView
                android:layout_width="@dimen/item_spacing_4x"
                android:layout_height="@dimen/item_spacing_4x"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/item_spacing_1x"
                android:src="@drawable/ic_tickets" />

            <TextView
                android:id="@+id/tvCostEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewTypeAndCost"
                tools:text="$40-60" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>