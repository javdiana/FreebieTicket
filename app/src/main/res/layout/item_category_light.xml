<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnCategoryItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/item_spacing_2x"
    android:background="@drawable/button_category_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnImageCategory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/item_spacing_2x"
        android:layout_marginTop="@dimen/item_spacing_2x"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/item_spacing_2x"
        android:src="@drawable/ic_location"
        android:contentDescription="@string/content_description"/>

    <TextView
        android:id="@+id/btnTitleCategory"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_spacing_3x"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/item_spacing_1x"
        android:layout_marginEnd="@dimen/item_spacing_8x"
        android:fontFamily="@font/work_sans_bold"
        android:textSize="@dimen/text_size_3x"
        tools:text="You area" />
</LinearLayout>