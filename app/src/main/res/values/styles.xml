<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextViewStyleTitle">
        <item name="android:textSize">@dimen/textSizeTextViewMainTitles</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="TextViewStyleWithoutMargins">
        <item name="android:textSize">@dimen/textSizeTextViewMainTitles</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
    </style>

    <style name="TextViewStyleItemRecycler">
        <item name="android:textSize">@dimen/textSizeItemEventsRvDate</item>
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
