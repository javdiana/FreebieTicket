<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextViewTitles">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_marginStart">@dimen/item_spacing_4x</item>
        <item name="android:textSize">@dimen/item_spacing_7x</item>
        <item name="android:layout_marginTop">@dimen/item_spacing_8x</item>
    </style>

    <style name="TextViewTypeAndCost">
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
        <item name="android:padding">@dimen/item_spacing_1x</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_3x</item>
    </style>

</resources>
